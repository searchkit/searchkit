{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "module": "commonjs",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "lib",
        "sourceMap": true,
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noUnusedParameters": true,
        "noImplicitUseStrict": true,
        "allowSyntheticDefaultImports": false,
        "jsx": "react",
        "lib": [
            "es5",
            "es2015",
            "dom"
        ],
        "paths": {
            "*": [ "node_modules/*", "*" ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}