{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": "src",
    "outDir": "lib/esm",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
  },
  "include":[
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./**/__tests__/**/*"
  ]
}
