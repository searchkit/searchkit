{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "module": "es2015",
        "target": "es2015",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "es",
        "sourceMap": true,
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noUnusedParameters": true,
        "noImplicitUseStrict": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": [
            "es5",
            "es2015",
            "dom"
        ],
        "paths": {
            "react": [
                "node_modules/@types/react"
            ]
        },
        "types": [
          "jest"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}